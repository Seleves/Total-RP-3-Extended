				</Frames>
			</Frame>

			<Frame parentKey="filter" inherits="TRP3_TooltipBackdropTemplate">
				<Size x="0" y="60"/>
				<KeyValues>
					<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_CREAMY_BROWN" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="10" y="10"/>
					<Anchor point="BOTTOMRIGHT" x="-10" y="10"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString parentKey="total" inherits="GameFontNormal">
							<Size x="0" y="10"/>
							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="-12"/>
								<Anchor point="TOPRIGHT" x="0" y="-12"/>
							</Anchors>
							<Color b="0.95" r="0.95" g="0.95"/>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<EditBox parentKey="box" inherits="TRP3_Tools_TitledEditBoxTemplate">
						<Size x="100" y="25"/>
						<Anchors>
							<Anchor point="BOTTOM" x="0" y="10"/>
						</Anchors>
					</EditBox>
				</Frames>
			</Frame>
		</Frames>
	</Frame>

	<!-- Large text area -->

	<Frame name="TRP3_Tools_TextEditor" hidden="true" enableMouse="true" inherits="TRP3_BrowserDialogBackdropTemplate" mixin="TRP3_Tools_TextEditorMixin">
		<KeyValues>
			<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_GREY" type="global"/>
		</KeyValues>

		<Size x="550" y="400"/>

		<Anchors>
			<Anchor point="TOPLEFT" x="25" y="-25"/>
			<Anchor point="BOTTOMRIGHT" x="-25" y="25"/>
		</Anchors>

		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="title" inherits="GameFontNormalLarge">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="-17"/>
						<Anchor point="TOPRIGHT" x="0" y="-17"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
			</Layer>
		</Layers>

		<Frames>

			<Button parentKey="close" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-5" y="-5"/>
				</Anchors>
				<Scripts>
					<OnClick>
						self:GetParent():Close();
					</OnClick>
				</Scripts>
			</Button>

			<Frame parentKey="content" inherits="TRP3_TooltipBackdropTemplate">
				<Size x="0" y="295"/>

				<KeyValues>
					<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_CREAMY_BROWN" type="global"/>
				</KeyValues>

				<Anchors>
					<Anchor point="TOP" x="0" y="-35"/>
					<Anchor point="LEFT" x="10" y="0"/>
					<Anchor point="RIGHT" x="-10" y="0"/>
					<Anchor point="BOTTOM" x="0" y="10"/>
				</Anchors>

				<Frames>
					<Frame parentKey="text" inherits="TRP3_Tools_TitledTextAreaTemplate">
						<Anchors>
							<Anchor point="TOP" y="-5"/>
							<Anchor point="LEFT" x="5"/>
							<Anchor point="RIGHT" x="-5"/>
							<Anchor point="BOTTOM" y="5"/>
						</Anchors>
					</Frame>
				</Frames>
			</Frame>
