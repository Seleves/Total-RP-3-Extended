	<Frame name="TRP3_Tools_NoteEditor" inherits="TRP3_Tools_TitledPopupTemplate" hidden="true" mixin="TRP3_Tools_NoteEditorMixin">
		<KeyValues>
			<KeyValue key="titleText" value="${EDITOR_NOTES}" type="string"/>
		</KeyValues>
		<Frames>
			<Frame parentKey="note" inherits="TRP3_TextArea">
				<Anchors>
					<Anchor point="TOP" y="-40"/>
					<Anchor point="LEFT" x="30"/>
					<Anchor point="RIGHT" x="-30"/>
					<Anchor point="BOTTOM" y="30"/>
				</Anchors>
			</Frame>
		</Frames>
	</Frame>

	<!-- Variable inspector -->

	<Button name="TRP3_Tools_VariableInspectorListElementTemplate" inherits="TRP3_Tools_ListElementTemplate" virtual="true" mixin="TRP3_Tools_VariableInspectorListElementMixin">
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="key" inherits="GameFontNormal" maxLines="1" justifyH="LEFT" justifyV="CENTER">
					<Size x="200"/>
					<Anchors>
						<Anchor point="LEFT" x="8"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
				<FontString parentKey="value" inherits="GameFontNormal" maxLines="1" justifyH="LEFT" justifyV="CENTER">
					<Anchors>
						<Anchor point="LEFT" x="4" relativePoint="RIGHT" relativeKey="$parent.key"/>
						<Anchor point="RIGHT" x="-32"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="delete" inherits="TRP3_Tools_DeleteButtonTemplate">
				<Anchors>
					<Anchor point="RIGHT" x="-8"/>
				</Anchors>
				<Scripts>
					<OnClick>
						self:GetParent():OnDelete();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnClick method="OnClick"/>
		</Scripts>
	</Button>

	<Frame name="TRP3_Tools_VariableInspector" hidden="true" enableMouse="true" inherits="TRP3_BrowserDialogBackdropTemplate" mixin="TRP3_Tools_VariableInspectorMixin">
		<KeyValues>
			<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_GREY" type="global"/>
		</KeyValues>

		<Size x="550" y="400"/>
		<Anchors>
			<Anchor point="CENTER" x="0" y="0"/>
		</Anchors>

		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="title" text="Variable Inspector" inherits="GameFontNormalLarge">
					<Size x="0" y="10"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="-17"/>
						<Anchor point="TOPRIGHT" x="0" y="-17"/>
					</Anchors>
					<Color b="0.95" r="0.95" g="0.95"/>
				</FontString>
				<FontString parentKey="errorText" inherits="GameFontNormal" justifyH="CENTER" justifyV="CENTER">
					<Size x="400" y="50"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
					<Color b="0" r="0.95" g="0"/>
				</FontString>
			</Layer>
		</Layers>

		<Frames>

			<Button parentKey="close" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-5" y="-5"/>
				</Anchors>
				<Scripts>
					<OnClick>
						self:GetParent():Close();
					</OnClick>
				</Scripts>
			</Button>

			<DropdownButton parentKey="instanceSelection" inherits="TRP3_Tools_TitledDropdownButtonTemplate" name="$parentInstanceSelection">
				<Anchors>
					<Anchor point="TOP" y="-35"/>
					<Anchor point="LEFT" x="10"/>
					<Anchor point="RIGHT" x="-10"/>
				</Anchors>
			</DropdownButton>

			<Frame parentKey="content" inherits="TRP3_TooltipBackdropTemplate">
				
				<KeyValues>
					<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_CREAMY_BROWN" type="global"/>
				</KeyValues>

				<Anchors>
					<Anchor point="TOP" y="-5" relativeKey="$parent.instanceSelection" relativePoint="BOTTOM"/>
					<Anchor point="LEFT" x="10"/>
					<Anchor point="RIGHT" x="-10"/>
					<Anchor point="BOTTOM" y="10"/>
				</Anchors>

				<Frames>
					<Frame name="$parentList" parentKey="list" inherits="TRP3_Tools_ListTemplate">
						<KeyValues>
							<KeyValue key="listElementTemplate" value="TRP3_Tools_VariableInspectorListElementTemplate" type="string"/>
							<KeyValue key="listElementMixin" value="TRP3_Tools_VariableInspectorListElementMixin" type="global"/>
						</KeyValues>
						<Anchors>
							<Anchor point="TOPLEFT" x="5" y="-5"/>
							<Anchor point="BOTTOMRIGHT" x="-5" y="5"/>
						</Anchors>
					</Frame>
				</Frames>
			</Frame>

			<Frame parentKey="editor" inherits="TRP3_TooltipBackdropTemplate">
				
				<KeyValues>
					<KeyValue key="backdropBorderColor" value="TRP3_BACKDROP_COLOR_CREAMY_BROWN" type="global"/>
				</KeyValues>

				<Anchors>
					<Anchor point="TOP" y="-5" relativeKey="$parent.instanceSelection" relativePoint="BOTTOM"/>
					<Anchor point="LEFT" x="10"/>
					<Anchor point="RIGHT" x="-10"/>
					<Anchor point="BOTTOM" y="10"/>
				</Anchors>

				<Frames>
					<DropdownButton parentKey="keyType" inherits="TRP3_Tools_TitledDropdownButtonTemplate">
						<KeyValues>
							<KeyValue key="titleText" value="Name type" type="string"/>
						</KeyValues>
						<Anchors>
							<Anchor point="TOP" y="-15"/>
							<Anchor point="LEFT" x="10"/>
							<Anchor point="RIGHT" x="-10"/>
						</Anchors>
					</DropdownButton>

					<EditBox parentKey="key" inherits="TRP3_Tools_TitledHelpEditBoxTemplate">
						<KeyValues>
							<KeyValue key="titleText" value="Variable name" type="string"/>
							<KeyValue key="helpText" value="Variable name" type="string"/>
						</KeyValues>
						<Anchors>
							<Anchor point="TOP" y="-15" relativeKey="$parent.keyType" relativePoint="BOTTOM"/>
							<Anchor point="LEFT" x="10"/>
							<Anchor point="RIGHT" x="-10"/>
						</Anchors>
					</EditBox>

					<DropdownButton parentKey="valueType" inherits="TRP3_Tools_TitledDropdownButtonTemplate">
						<KeyValues>
							<KeyValue key="titleText" value="Value type" type="string"/>
						</KeyValues>
						<Anchors>
							<Anchor point="TOP" y="-15" relativeKey="$parent.key" relativePoint="BOTTOM"/>
							<Anchor point="LEFT" x="10"/>
							<Anchor point="RIGHT" x="-10"/>
						</Anchors>
					</DropdownButton>

					<EditBox parentKey="numberValue" inherits="TRP3_Tools_TitledHelpEditBoxTemplate">
						<KeyValues>
							<KeyValue key="titleText" value="Value" type="string"/>
							<KeyValue key="helpText" value="Value" type="string"/>
						</KeyValues>
						<Anchors>
							<Anchor point="TOP" y="-15" relativeKey="$parent.valueType" relativePoint="BOTTOM"/>
							<Anchor point="LEFT" x="10"/>
							<Anchor point="RIGHT" x="-10"/>
						</Anchors>
					</EditBox>

					<Frame parentKey="stringValue" inherits="TRP3_Tools_TitledHelpTextAreaTemplate">
						<KeyValues>
							<KeyValue key="titleText" value="Value" type="string"/>
							<KeyValue key="helpText" value="Value" type="string"/>
						</KeyValues>
						<Size x="0" y="74"/>
						<Anchors>
							<Anchor point="TOP" y="-15" relativePoint="BOTTOM" relativeKey="$parent.valueType"/>
							<Anchor point="LEFT" x="10"/>
							<Anchor point="RIGHT" x="-10"/>
							<Anchor point="BOTTOM" y="40"/>
						</Anchors>
					</Frame>

					<DropdownButton parentKey="booleanValue" inherits="TRP3_Tools_TitledDropdownButtonTemplate">
						<KeyValues>
							<KeyValue key="titleText" value="Value" type="string"/>
						</KeyValues>
						<Anchors>
							<Anchor point="TOP" y="-15" relativeKey="$parent.valueType" relativePoint="BOTTOM"/>
							<Anchor point="LEFT" x="10"/>
							<Anchor point="RIGHT" x="-10"/>
						</Anchors>
					</DropdownButton>

					<Button parentKey="accept" text="OK" inherits="TRP3_CommonButton">
						<Size x="120" y="22"/>
						<Anchors>
							<Anchor point="RIGHT" x="-5" relativePoint="CENTER"/>
							<Anchor point="BOTTOM" y="10"/>
						</Anchors>
					</Button>

					<Button parentKey="cancel" text="CANCEL" inherits="TRP3_CommonButton">
						<Size x="120" y="22"/>
						<Anchors>
							<Anchor point="LEFT" relativePoint="CENTER" x="5"/>
							<Anchor point="BOTTOM" y="10"/>
						</Anchors>
					</Button>

				</Frames>
			</Frame>
		</Frames>
	</Frame>

