							<CheckButton parentKey="noAdd" inherits="TRP3_Tools_CheckBoxTemplate" name="$parentNoAdd">
								<KeyValues>
									<KeyValue key="titleText" value="${IT_NO_ADD}" type="string"/>
									<KeyValue key="helpText" value="${IT_NO_ADD_TT}" type="string"/>
								</KeyValues>
								<Anchors>
