									<Anchor point="LEFT" x="10" y="0" relativePoint="CENTER"/>
								</Anchors>
							</CheckButton>
							
							<CheckButton parentKey="quest" inherits="TRP3_Tools_CheckBoxTemplate" name="$parentQuest">
