							<CheckButton parentKey="crafted" inherits="TRP3_Tools_CheckBoxTemplate" name="$parentCrafted">
								<KeyValues>
									<KeyValue key="titleText" value="${IT_CRAFTED}" type="string"/>
									<KeyValue key="helpText" value="${IT_CRAFTED_TT}" type="string"/>
								</KeyValues>
								<Anchors>
