					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentText" parentKey="title" text="" inherits="GameFontNormalSmall" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" x="5" y="5"/>
						<Anchor point="TOPRIGHT" x="0" y="5"/>
					</Anchors>
					<Color r="0.95" g="0.75" b="0.1"/>
				</FontString>
			</Layer>
		</Layers>
		<FontString inherits="GameFontWhite"/>
		<TextInsets left="8" top="1" right="8"/>
		<Scripts>
			<OnEscapePressed>
				self:ClearFocus()
			</OnEscapePressed>
			<OnEditFocusGained>
				if self.disabled then
					self:ClearFocus();
				else
					self:HighlightText();
				end
			</OnEditFocusGained>
			<OnEditFocusLost>
				self:HighlightText(0,0);
			</OnEditFocusLost>
			<OnEnter>
				TRP3_RefreshTooltipForFrame(self);
			</OnEnter>
			<OnLeave>
				TRP3_MainTooltip:Hide();
			</OnLeave>
		</Scripts>
	</EditBox>
	
